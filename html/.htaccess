# 삼마디자인 - Apache 설정 (.htaccess)

Options -Indexes

# config/, includes/ 폴더 직접 웹 접근 차단
<IfModule mod_rewrite.c>
  RewriteEngine On

  # config/ 직접 접근 차단
  RewriteRule ^config/ - [F,L]

  # includes/ 직접 접근 차단
  RewriteRule ^includes/ - [F,L]

  # sql/ 직접 접근 차단
  RewriteRule ^sql/ - [F,L]
</IfModule>

# 업로드 폴더에서 PHP 실행 차단 (보안)
<IfModule mod_php7.c>
  <Directory "uploads">
    php_flag engine off
  </Directory>
</IfModule>

# 파일 업로드 크기 제한 (닷홈 기본값 적용)
php_value upload_max_filesize 10M
php_value post_max_size 12M

# 문자셋
AddDefaultCharset UTF-8

# MIME 타입
AddType application/javascript .js
AddType text/css .css
