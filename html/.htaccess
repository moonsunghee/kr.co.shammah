# 삼마디자인 - Apache 설정 (.htaccess)

Options -Indexes

# config/, includes/, sql/ 폴더 직접 웹 접근 차단
<IfModule mod_rewrite.c>
  RewriteEngine On

  # config/ 직접 접근 차단
  RewriteRule ^config/ - [F,L]

  # includes/ 직접 접근 차단
  RewriteRule ^includes/ - [F,L]

  # sql/ 직접 접근 차단
  RewriteRule ^sql/ - [F,L]
</IfModule>

# 문자셋
AddDefaultCharset UTF-8

# MIME 타입
AddType application/javascript .js
AddType text/css .css
